<Window x:Class="_4338Project.BayazovaDi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4338Project"
        mc:Ignorable="d"
        Title="BayazovaDi" Height="450" Width="800">
    <Grid>
        <Grid>
            <WrapPanel Orientation="Horizontal">
                <Button Margin="20,10,05,30" Click="Button_Click" >О разработчике</Button>
                <Button Margin="20,10,05,30" Click="Button_Click_1" Content="Экспорт в Excel"/>
                <Button Margin="15,10,43,30" Click="Button_Click_2" Content="Импорт данных"/>
                <DataGrid x:Name="dataGridUsl" Width="700" Margin="20,0,0,0" Background="White" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding IdServices}" Width="50"/>
                        <DataGridTextColumn Header="Название услуги" Binding="{Binding NameServices}" Width="150"/>
                        <DataGridTextColumn Header="Вид услуги" Binding="{Binding TypeOfService}" Width="150"/>
                        <DataGridTextColumn Header="Код услуги" Binding="{Binding CodeService}" Width="150"/>
                        <DataGridTextColumn Header="Стоимость" Binding="{Binding Cost}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </WrapPanel>
        </Grid>
    </Grid>
</Window>
